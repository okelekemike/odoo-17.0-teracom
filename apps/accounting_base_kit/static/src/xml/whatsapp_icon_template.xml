<?xml version="1.0" encoding="UTF-8" ?>
<templates xml:space="preserve">
    <!-- Adding a whatsapp icon in systray.-->
    <t t-name="accounting_base_kit.whatsapp_icon" owl="1">
        <div class="o-dropdown dropdown o_whatsapp_icon o-dropdown--no-caret">
            <label class="dropdown-toggle o-dropdown--narrow"
                   t-on-click="onclick_whatsapp_icon" tabindex="0"
                   aria-expanded="false" title="Send Message Through Whatsapp">
                <i class="fa fa-whatsapp whatsapp_icon" id="fa-icon"/>
            </label>
         </div>
    </t>
</templates>
